<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/BottomSheetBg">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitEnd"
        android:src="@drawable/home_bubble1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitEnd"
        android:src="@drawable/home_bubble2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitEnd"
        android:src="@drawable/home_bubble3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_marginHorizontal="16dp"
        android:id="@+id/address_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Sample Address, Talisay, Cebu"
        android:textColor="#4E4F4F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="19.21dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hi_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hello, "
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#4E4F4F"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_name"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="@color/blueFont"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_display">

        <ImageView
            android:layout_width="129dp"
            android:layout_height="161dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/delivery_man_img" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Quench Your Thirst with a Tap"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Fresh Water Delivered Right to Your Doorstep!"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/order_now_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Order now"
            android:textAllCaps="false"
            android:textColor="@color/blueFont"
            android:textSize="10sp"
            app:cornerRadius="20dp" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- First CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="215dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:background="@drawable/home_round_corners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ad1_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Enjoy dealer privileges"
                        android:textColor="@color/blueFont"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Choose the size of water container that fits your requirements from the following options."
                        android:textColor="@color/josiahBlack"
                        android:textSize="9dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="215dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:background="@drawable/home_round_corners"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ad1_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Exclusive supplier offers"
                        android:textColor="@color/blueFont"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Enjoy exclusive discounts on bulk purchases."
                        android:textColor="@color/josiahBlack"
                        android:textSize="9dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>