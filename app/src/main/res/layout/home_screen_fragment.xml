<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/BottomSheetBg">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Sample Address, Talisay, Cebu"
        android:textColor="#4E4F4F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="19.21dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hi_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Hello, "
            android:textColor="#4E4F4F"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="@color/blueFont"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/home_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ImageView
            android:layout_width="129dp"
            android:layout_height="161dp"
            android:src="@drawable/delivery_man_img"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/card_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Quench Your Thirst with a Tap"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="21sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_below="@+id/card_title"
            android:layout_marginLeft="16dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Fresh Water Delivered Right to Your Doorstep!"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="10sp"
            android:textColor="@color/white"/>




        <Button
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/order_now_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Order now"
            android:textAllCaps="false"
            android:textColor="@color/blueFont"
            android:textSize="10sp"
            app:cornerRadius="20dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/InputBoxOutline"
        android:padding="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home_ic" />

        <ImageButton
            android:id="@+id/order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/add_circle_ic" />

        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/profile_ic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>