<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/BottomSheetBg"/> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="@color/blueFont"/> <!-- Blue outline -->
    <padding
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp"/> <!-- Optional: Padding inside the border -->
